    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        describe("launch.json", () => {
            it("should have a version of 0.2.0", () => {
                expect(launch.json.version).toBe("0.2.0");
            });
        
            it("should have a configuration for Chrome", () => {
                expect(launch.json.configurations[0].type).toBe("chrome");
            });
        
            it("should have a request of launch", () => {
                expect(launch.json.configurations[0].request).toBe("launch");
            });
        
            it("should have a name of Launch Chrome against localhost", () => {
                expect(launch.json.configurations[0].name).toBe("Launch Chrome against localhost");
            });
        
            it("should have a url of http://localhost:8080", () => {
                expect(launch.json.configurations[0].url).toBe("http://localhost:8080");
            });
        
            it("should have a webRoot of ${workspaceFolder}", () => {
                expect(launch.json.configurations[0].webRoot).toBe("${workspaceFolder}");
            });
        });
        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}